<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:background="#00F7F2F2">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:textColor="@color/colorAccent"
            android:gravity="center|right"

            android:id="@+id/textView" android:background="@android:color/darker_gray" android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/row1">


            <Button
                    android:id="@+id/buttonAC"
                    android:text="Ac"
                    android:gravity="center"
                    android:layout_span="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <Button
                    android:id="@+id/buttonSlash"
                    android:text="/"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnop"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:background="#FF9800"/>
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/row2">
            <Button
                    android:id="@+id/button7"
                    android:text="7"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/button8"
                    android:text="8"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/button9"
                    android:text="9"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/buttontimes"
                    android:text="*"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnop"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:background="#FF9800"/>

        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/row3">
            <Button
                    android:id="@+id/button4"
                    android:text="4"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/button5"
                    android:text="5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/button6"
                    android:text="6"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/buttonminus"
                    android:text="-"
                    android:onClick="btnOnop"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:layout_weight="1"/>


        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/row4">
            <Button
                    android:id="@+id/button1"
                    android:text="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnOnnumber"
               />
            <Button
                    android:id="@+id/button2"
                    android:text="2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnOnnumber"
                    />
            <Button
                    android:id="@+id/button3"
                    android:text="3"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnOnnumber"
                    />
            <Button
                    android:id="@+id/buttonplus"
                    android:text="+"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:background="#FF9800"
                    android:onClick="btnOnop"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>


        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/row5">
            <Button
                    android:id="@+id/button0"
                    android:text="0"
                    android:layout_span="2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content" />
            <Button
                    android:id="@+id/buttondot"
                    android:text="."
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:onClick="btnOnnumber"
                    android:layout_height="wrap_content" />

            <Button
                    android:id="@+id/buttonequals"
                    android:text="="
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:layout_weight="1"/>


        </TableRow>
    </TableLayout>
</LinearLayout>